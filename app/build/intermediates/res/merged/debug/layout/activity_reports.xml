<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B0E0E6"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.society.gsaienter.CollectionActivity" >

    <TextView 
        android:id="@+id/reportTitle"
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/reportsTitle"
        android:textSize="30sp"
        android:gravity="center"
        android:textStyle="bold" 
        android:paddingBottom="20dp"/>
    
    <Button 
        android:id="@+id/custreport"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/creports"
        android:textColor="#FFFFFF"
        android:background="@drawable/custom_button"/>

    <Button 
        android:id="@+id/datereport"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/dreports"
        android:textColor="#FFFFFF" 
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"/>
    
    <Button 
        android:id="@+id/others"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/other_report"
        android:textColor="#FFFFFF" 
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"/>
    
    <Button 
        android:id="@+id/commcalc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/commission_calc"
        android:textColor="#FFFFFF" 
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"/>

</LinearLayout>
